<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yeti.timez" >

    <uses-sdk android:minSdkVersion="11" android:maxSdkVersion="22"/>

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.yeti.timez.application.YetiTimezApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yeti.timez.application.TimerActivity"
            android:label="@string/title_activity_timer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yeti.timez.application.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
